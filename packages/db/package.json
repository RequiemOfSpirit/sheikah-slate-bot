{
  "name": "@sheikah-slate-bot/db",
  "version": "0.0.0",
  "description": "Common DB library meant to be used by other bots in the project. Will be replaced by an API workspace in the future.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -f .eslintcache && rm -rf dist && rm -rf node_modules",
    "lint": "eslint --cache --report-unused-disable-directives --max-warnings 0 && prettier --cache -c .",
    "lint:fix": "eslint --fix --cache --report-unused-disable-directives --max-warnings 0 && prettier --cache -w .",
    "prebuild": "npm run lint:fix",
    "build": "tsc",
    "db:make": "node-pg-migrate create -j sql",
    "db:migrate": "node-pg-migrate up",
    "db:migrate:down": "node-pg-migrate down"
  },
  "type": "module",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.39.1",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/pg": "^8.11.11",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "node-pg-migrate": "^7.9.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0"
  }
}
