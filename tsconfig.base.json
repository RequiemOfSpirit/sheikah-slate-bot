/* Base TSConfig settings to be extended by all project TSConfig files */
{
  "compilerOptions": {
    /* Project */
    "composite": true,

    /* Module and Environment */
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,

    /* Project */
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
}
